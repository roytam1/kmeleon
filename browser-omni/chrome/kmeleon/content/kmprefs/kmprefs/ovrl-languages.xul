<!DOCTYPE overlay SYSTEM "chrome://kmprefs/locale/kmprefs/ovrl-languages.dtd">
<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
<!--
	<stringbundleset id="lang_stringbundleset">
		<stringbundle id="acceptedBundle" src="resource://gre/res/language.properties"/>
		<stringbundle id="languagesBundle" src="chrome://global/locale/languageNames.properties"/>
		<stringbundle id="regionsBundle" src="chrome://global/locale/regionNames.properties"/>
		<stringbundle id="prefLangBundle" src="chrome://kmprefs/locale/kmprefs/ovrl-languages.properties"/>
	</stringbundleset>
-->
	<script type="application/x-javascript" src="chrome://kmprefs/content/kmprefs/ovrl-languages.js"/>
	<tabpanel id="LanguagesWebPages" flex="1" orient="vertical" style="overflow:auto">
		<separator class="thin"/>
		<groupbox flex="1">
			<caption label="&langtitle.label;"/>
			<description>&languages.customize.prefLangDescript;</description>
			<label 
				accesskey="&languages.customize.active.accesskey;"
				control="activeLanguages">&languages.customize.active.label;</label>
			<hbox flex="1">
				<listbox 
					id="activeLanguages"
					flex="1"
					style="width: 0px; height: 0px;"
					seltype="multiple"
					preference="intl.accept_languages"
					onkeypress="RemoveActiveLanguage(event);"
					onselect="SelectLanguage();"
					onsynctopreference="return WriteActiveLanguages();"
					onsyncfrompreference="return ReadActiveLanguages();"/>
				<vbox>
					<button 
						id="langUp"
						class="up"
						disabled="true"
						label="&languages.customize.moveUp.label;"
						accesskey="&languages.customize.moveUp.accesskey;"
						preference="false"
						oncommand="MoveUp();"/>
					<button 
						id="langDown"
						class="down"
						disabled="true"
						label="&languages.customize.moveDown.label;"
						accesskey="&languages.customize.moveDown.accesskey;"
						preference="false"
						oncommand="MoveDown();"/>
					<spacer flex="1"/>
					<button 
						id="langApply"
						disabled="true"
						label="&languages.customize.applyButton.label;"
						accesskey="&languages.customize.applyButton.accesskey;"
						preference="false"
						oncommand="ApplyLangWeb();"/>
					<spacer flex="1"/>
					<button 
						id="langAdd"
						label="&languages.customize.addButton.label;"
						accesskey="&languages.customize.addButton.accesskey;"
						preference="false"
						oncommand="AddLanguage();"/>
					<button 
						id="langRemove"
						disabled="true"
						label="&languages.customize.deleteButton.label;"
						accesskey="&languages.customize.deleteButton.accesskey;"
						preference="false"
						oncommand="RemoveActiveLanguage(null);"/>
				</vbox>
			</hbox>
		</groupbox>
		<groupbox align="start">
			<caption label="&languages.customize.Charset.grouplabel;"/>
			<hbox align="center">
				<label value="&languages.customize.DefaultCharset.label;"
					   accesskey="&languages.customize.DefaultCharset.accesskey;"
					   control="intl.charset.default"/>
				<menulist 
					id="intl.charset.default" 
					oncommand="setCharPref(this.id,this.value)"
					ref=""
					datasources="rdf:charset-menu"
					preference="intl.charset.default">
					<template>
						<menupopup>
							<menuitem label="rdf:http://home.netscape.com/NC-rdf#Name"
									  value="..."
									  uri="..."/>
						</menupopup>
					</template>
				</menulist> 
			</hbox>
		</groupbox>
	</tabpanel>
	<tab id="LanguagesWebTab" label="&languages.customize.title;"/>
</overlay>