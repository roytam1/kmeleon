								</treerow>
							</treeitem>
						</treechildren>
					</treeitem>
					<treeitem id="network" container="true">
						<treerow>
							<treecell url="chrome://kmprefs/content/pref-network.xul" label="&network.label;"/>
						</treerow>
						<treechildren>
							<treeitem id="proxy">
