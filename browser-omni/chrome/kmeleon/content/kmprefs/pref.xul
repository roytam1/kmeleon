								</treerow>
							</treeitem>
							<treeitem id="webfind">
								<treerow>
									<treecell url="chrome://kmprefs/content/pref-webfind.xul" label="&webfind.label;"/>
								</treerow>
							</treeitem>
							<treeitem id="history">
								<treerow>
